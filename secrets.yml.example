---
# Ansible secrets file - COPY to secrets.yml and encrypt with ansible-vault
# Usage:
#   1. cp secrets.yml.example secrets.yml
#   2. Edit secrets.yml with your credentials
#   3. ansible-vault encrypt secrets.yml
#   4. Use with: ansible-playbook -i inventory.ini --ask-vault-pass ansible-playbook.yml

# Global credentials (applied to all hosts unless overridden)
ansible_user: root
ansible_password: your_password_here

# SSH key authentication (preferred over password)
# Uncomment to use SSH key instead of password:
# ansible_ssh_private_key_file: ~/.ssh/id_rsa

# Per-host credentials (optional - overrides global settings)
# Use this format if different containers have different credentials:
host_vars:
  container1:
    ansible_user: root
    ansible_password: container1_password

  container2:
    ansible_user: admin
    ansible_password: container2_password

  dev1:
    ansible_user: root
    ansible_password: dev_password

# Alternative: Use SSH keys per host
#   container3:
#     ansible_user: root
#     ansible_ssh_private_key_file: ~/.ssh/container3_key
